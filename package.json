{
	"name": "wplace-framework",
	"version": "0.1.0-beta",
	"description": "Framework for hooking into Wplace.",
	"author": "Mikarific",
	"license": "MIT",
	"private": true,
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"dev": "rollup -wc",
		"clean": "del-cli dist types",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint src/*.ts",
		"ci": "run-s lint",
		"build:types": "tsc",
		"build:js": "rollup -c",
		"build": "run-s ci clean build:types build:js"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^28.0.6",
		"@rollup/plugin-json": "^6.1.0",
		"@rollup/plugin-node-resolve": "^16.0.1",
		"@rollup/plugin-replace": "^6.0.2",
		"@rollup/plugin-typescript": "^12.1.4",
		"@types/eslint": "^9.6.1",
		"@typescript-eslint/eslint-plugin": "^8.18.1",
		"@typescript-eslint/parser": "^8.18.1",
		"@violentmonkey/types": "^0.2.2",
		"del-cli": "^6.0.0",
		"eslint": "^9.15.0",
		"eslint-config-prettier": "^9.1.0",
		"globals": "^15.14.0",
		"lint-staged": "^15.2.0",
		"maplibre-gl": "5.5.0",
		"prettier": "^3.4.2",
		"read-package-up": "^11.0.0",
		"rollup": "^4.46.2",
		"rollup-plugin-userscript": "^1.0.0",
		"svelte-sonner": "^1.0.5",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.18.1"
	},
	"dependencies": {
		"@babel/runtime": "^7.25.9",
		"tslib": "^2.8.1"
	},
	"lint-staged": {
		"src/**": [
			"eslint --fix",
			"prettier --write"
		]
	}
}
